<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".AboutActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/developer_photo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/okugata" />
    <TextView
        android:id="@+id/tv_developer_name"
        style="@style/TextAbout"
        android:layout_below="@+id/developer_photo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/developer_name" />
    <TextView
        android:id="@+id/tv_developer_email"
        style="@style/TextAbout"
        android:layout_below="@id/tv_developer_name"
        android:textSize="13sp"
        android:layout_marginTop="7dp"
        android:text="@string/developer_email"/>
</RelativeLayout>